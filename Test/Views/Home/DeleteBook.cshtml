@model Test.Models.Book
@{
    ViewBag.Title = "Удаление Книги";
}

<div>
    <dl class="dl-horizontal">
        <dt>Название</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>ID автора</dt>
        <dd>
            @Html.DisplayFor(model => model.AuthorId)
        </dd>

        <dt>Издательство</dt>
        <dd>
            @Html.DisplayFor(model => model.PublishingHouse)
        </dd>

        <dt>Год издания</dt>
        <dd>
            @Html.DisplayFor(model => model.YearOfPublishing)
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="DeleteBook" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>