@model Test.Models.CreateAuthorModel

<h2>Добавить автора</h2>

<form asp-action="CreateAuthor" asp-controller="Home" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Name">Имя</label><br />
            <input type="text" asp-for="Name" />
            <span asp-validation-for="Name" />
        </div>
        <div>
            <label asp-for="Surname">Фамилия</label><br />
            <input asp-for="Surname" />
            <span asp-validation-for="Surname" />
        </div>
        <div>
            <label asp-for="Patronymic">Отчество</label><br />
            <input asp-for="Patronymic" />
            <span asp-validation-for="Patronymic" />
        </div>
        <div>
            <input type="submit" value="Добавить" />
        </div>
    </div>
</form>