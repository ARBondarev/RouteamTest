@model Test.Models.Book
@{
    ViewBag.Title = "Изменить данные книги";
}
    <form asp-action="EditBook" asp-controller="home" asp-route-id="@Model.Id">
        <div class="form-group">
            <label asp-for="Name" class="control-label">Название</label>
            <input type="text" asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="AuthorId" class="control-label">ID автора</label>
            <input type="number" asp-for="AuthorId" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="PublishingHouse" class="control-label">Издательство</label>
            <input type="text" asp-for="PublishingHouse" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="YearOfPublishing" class="control-label">год издания</label>
            <input type="number" asp-for="YearOfPublishing" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Изменить" class="btn btn-default" />
        </div>
    </form>